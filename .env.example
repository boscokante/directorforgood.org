# ===========================================
# HIIIWAV Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values
# See docs/INFRASTRUCTURE.md for account details

# Database (Supabase)
# Get from: https://supabase.com/dashboard/project/pzoyeigicwgmmlngxowj/settings/database
DATABASE_URL="postgresql://postgres.[project-id]:[password]@aws-0-us-west-2.pooler.supabase.com:5432/postgres"

# Supabase Storage (for images)
# Get from: https://supabase.com/dashboard/project/pzoyeigicwgmmlngxowj/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://pzoyeigicwgmmlngxowj.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# NextAuth (authentication)
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-random-secret"
NEXTAUTH_URL="http://localhost:3000"

# OpenAI (for AI chat features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Site URL (for production)
# SITE_URL="https://hiiiwav.org"

# Supabase Service Role Key (for admin operations like creating buckets)
# ⚠️  Keep this secret! Don't expose in frontend code
# Get from: https://supabase.com/dashboard/project/pzoyeigicwgmmlngxowj/settings/api
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"
